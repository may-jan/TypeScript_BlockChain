{
  "include": ["src"], // 컴파일 할 디렉터리 및 파일
  "compilerOptions": {
    "outDir": "build", // 자바스크립트 파일이 생성될 디렉터리
    "target": "ES6", // 컴파일할 자바스크립트 버전
    "lib": ["ES6"], // 타입스크립트가 작동할 환경 설정
    "strict": true, // 모든 엄격한 타입-체킹 옵션 활성화 여부
    // "allowJs": true // 타입스크립트에서 자바스크립트 코드 사용 가능 여부
    "esModuleInterop": true,
    "module": "CommonJS"
  }
}

